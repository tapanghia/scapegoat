<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
     <class name="com.marklabs.purchaseIntention.SemanticSegmentIdealValueMap" 
     		table="semantic_segment_idealvaluemap">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="segment"/>
        <property name="period" type="integer"/>
		<property name="designValue" type="double"/>
		<property name="fragranceValue" type="double"/>
		<property name="persistenceValue" type="double"/>
		<property name="packagingValue" type="double"/>
		<property name="safetyValue" type="double"/>
						
     </class>
</hibernate-mapping>


